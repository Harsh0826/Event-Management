@model IEnumerable<EventManagement.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<div class="page-header">
    <h2 class="page-title">All Events</h2>
    <a class="btn btn-primary" href="/Event/Create">+ Add New Event</a>
</div>

<div class="event-list">
    @foreach (var e in Model)
    {
        <div class="event-card">
            <h3 class="event-title">@e.Title</h3>
            <p class="event-description">@e.Description</p>

            <div class="event-details">
                <div><strong>Date:</strong> @e.Date.ToString("MMMM dd, yyyy")</div>
                <div><strong>Time:</strong> @e.Time.ToString(@"hh\:mm")</div>
                <div><strong>Location:</strong> @e.Location</div>
            </div>

            <div class="event-actions">
                <a class="btn btn-secondary" href="/Event/Edit/@e.Id">Edit</a>
                <a class="btn btn-danger" href="/Event/Delete/@e.Id" onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
            </div>
        </div>
    }
</div>
